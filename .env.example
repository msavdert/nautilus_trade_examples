# Binance API Credentials
# Testnet için: https://testnet.binance.vision/

# Binance Spot Testnet API Keys
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_SECRET_KEY=your_testnet_secret_key_here

# Binance Futures Testnet API Keys (gelecek kullanım için)
BINANCE_FUTURES_TESTNET_API_KEY=your_futures_testnet_api_key_here
BINANCE_FUTURES_TESTNET_SECRET_KEY=your_futures_testnet_secret_key_here

# ===== BOT CONFIGURATION =====
# Bu bot için özel ayarlar

# Bot Trading Configuration
BOT_INSTRUMENT_ID=BTCUSDT.BINANCE     # Trading pair (Nautilus format)
BOT_TRADE_SIZE=0.001                  # Trade size in base asset (BTC)
BOT_FAST_SMA_PERIOD=10               # Fast SMA period
BOT_SLOW_SMA_PERIOD=20               # Slow SMA period

# ===== LEGACY CONFIGURATION =====
# Eski bot'lar veya farklı implementasyonlar için
TRADE_SIZE=10.0                    # Default trade size (USDT)
MAX_POSITION_SIZE=100.0            # Maximum position size (USDT)
STOP_LOSS_PERCENTAGE=2.0           # Stop loss percentage (%)
TAKE_PROFIT_PERCENTAGE=5.0         # Take profit percentage (%)

# Risk Management
MAX_DAILY_LOSS=50.0               # Maximum daily loss (USDT)
MAX_DRAWDOWN_PERCENTAGE=10.0      # Maximum drawdown (%)

# Environment
ENVIRONMENT=testnet               # testnet or live
LOG_LEVEL=INFO                   # DEBUG, INFO, WARNING, ERROR

# Strategy Parameters
EMA_SHORT_PERIOD=12              # Short EMA period
EMA_LONG_PERIOD=26               # Long EMA period
RSI_PERIOD=14                    # RSI period
RSI_OVERSOLD=30                  # RSI oversold level
RSI_OVERBOUGHT=70                # RSI overbought level

# Exchange Configuration
BASE_ASSET=BTC                   # Base trading asset
QUOTE_ASSET=USDT                 # Quote asset
SYMBOL=BTCUSDT                   # Trading symbol

# Timeframes
MAIN_TIMEFRAME=1m                # Main timeframe for signals
HIGHER_TIMEFRAME=5m              # Higher timeframe for confirmation

# Notifications (optional)
DISCORD_WEBHOOK_URL=             # Discord webhook for notifications
TELEGRAM_BOT_TOKEN=              # Telegram bot token
TELEGRAM_CHAT_ID=                # Telegram chat ID
