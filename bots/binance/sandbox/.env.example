# Örnek Environment Dosyası - .env.example
# Bu dosyayı .env olarak kopyalayın ve kendi API bilgilerinizi girin

# Binance Testnet API Credentials
# https://testnet.binance.vision/ adresinden alınabilir
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# Trading Configuration
INITIAL_BALANCE=10000.0
MAX_POSITION_SIZE=0.02
MAX_RISK_PER_TRADE=0.01

# Strategy Parameters
ATR_PERIOD=14
BOLLINGER_PERIOD=20
BOLLINGER_STD=2.0
RSI_PERIOD=14
VOLUME_PERIOD=20
VOLUME_THRESHOLD=1.5

# Risk Management
STOP_LOSS_ATR_MULTIPLIER=2.0
TAKE_PROFIT_ATR_MULTIPLIER=3.0
TRAILING_STOP_ATR_MULTIPLIER=1.5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=binance_testnet_bot.log

# Development Settings
DEBUG_MODE=false
PAPER_TRADING=true

# Bot Behavior
MAX_ACTIVE_POSITIONS=5
COIN_COUNT=50
MIN_24H_VOLUME_USDT=1000000

# Timeframes
PRIMARY_TIMEFRAME=1m
SECONDARY_TIMEFRAME=5m

# Safety Settings
ENABLE_EMERGENCY_STOP=true
MAX_DAILY_LOSS=500.0
